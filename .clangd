# Clangd configuration for MSBasicClone
# This adds system include paths that aren't in compile_commands.json

CompileFlags:
  Add:
    - "-isystem/usr/include/c++/13"
    - "-isystem/usr/include/x86_64-linux-gnu/c++/13"
    - "-isystem/usr/include/c++/13/backward"
    - "-isystem/usr/lib/gcc/x86_64-linux-gnu/13/include"
    - "-isystem/usr/local/include"
    - "-isystem/usr/include/x86_64-linux-gnu"
    - "-isystem/usr/include"
  
  # Remove problematic flags that clangd doesn't understand
  Remove:
    - "-Werror"  # Let clangd show all warnings without failing
