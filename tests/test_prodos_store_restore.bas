10 REM TEST PRODOS STORE AND RESTORE COMMANDS
20 REM Set up some variables
30 A = 42
40 B = 3.14159
50 C% = 12345
60 D$ = "HELLO WORLD"
70 E$ = "TEST STRING"
80 F = -99.5
90 REM Store variables to file
100 STORE "test_vars.dat"
110 PRINT "VARIABLES STORED"
120 REM Clear variables
130 A = 0
140 B = 0
150 C% = 0
160 D$ = ""
170 E$ = ""
180 F = 0
190 PRINT "VARIABLES CLEARED"
200 PRINT "A=";A;" B=";B;" C%=";C%
210 PRINT "D$=";D$;" E$=";E$;" F=";F
220 REM Restore variables from file
230 RESTORE "test_vars.dat"
240 PRINT "VARIABLES RESTORED"
250 PRINT "A=";A;" B=";B;" C%=";C%
260 PRINT "D$=";D$;" E$=";E$;" F=";F
270 REM Verify values
280 IF A <> 42 THEN PRINT "ERROR: A MISMATCH" : END
290 IF ABS(B - 3.14159) > 0.00001 THEN PRINT "ERROR: B MISMATCH" : END
300 IF C% <> 12345 THEN PRINT "ERROR: C% MISMATCH" : END
310 IF D$ <> "HELLO WORLD" THEN PRINT "ERROR: D$ MISMATCH" : END
320 IF E$ <> "TEST STRING" THEN PRINT "ERROR: E$ MISMATCH" : END
330 IF ABS(F + 99.5) > 0.001 THEN PRINT "ERROR: F MISMATCH" : END
340 PRINT "ALL TESTS PASSED"
